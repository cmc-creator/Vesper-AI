{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm --prefix ./frontend install --legacy-peer-deps && npm --prefix ./frontend run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "installCommand": "npm --prefix ./frontend install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://vesper-backend-production-b486.up.railway.app/api/:path*"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
